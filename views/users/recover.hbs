<section>
    <div class="wrapper-recuperarContraseña">
        <div class="row">
            <div class="col-10 col-sm-10 col-md-10 col-lg-4 col-xl-4 offset-lg-4 offset-xl-4">
                <form action="/email/changePass" method="post" class="formulario-recuperarcontrasenya">
                    <input type="text" name="id" value="{{id}}" style="display: none">
                    <label for="contrasenya">Nueva Contraseña</label>
